{
    "name": "digitalingenieur/churchtools-bundle",
    "type": "contao-bundle",
    "description": "Contao 4 Churchtools bundle",
    "license": "LGPL-3.0+",
    "authors": [
        {
            "name": "Samuel Heer",
            "homepage": "https://github.com/digitalingenieur"
        }
    ],
    "require": {
        "php": ">=5.5.0",
        "symfony/framework-bundle": "~2.8|~3.0",
        "contao/core-bundle": "~4.2"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "~1.8",
        "phpunit/phpunit": "~4.5",
        "satooshi/php-coveralls": "~0.6",
        "symfony/phpunit-bridge": "~2.8|~3.0"
    },
    "conflict": {
        "contao/core": "*"
    },
    "autoload": {
        "psr-4": {
            "Diging\\ChurchtoolsBundle\\": "src/"
        },
        "classmap": [
            "src/Resources/contao/classes"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Diging\\ChurchtoolsBundle\\Test\\": "tests/"
        }
    },
    "config": {
        "preferred-install": "dist"
    },
    "extra": {
        "branch-alias": {
            "dev-develop": "4.3.x-dev"
        }
    }
}

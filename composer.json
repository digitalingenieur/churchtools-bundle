{
    "name": "digitalingenieur/churchtools-bundle",
    "type": "contao-bundle",
    "description": "Contao 4 Churchtools bundle",
    "license": "LGPL-3.0+",
    "authors": [
        {
            "name": "Samuel Heer",
            "homepage": "https://github.com/digitalingenieur"
        }
    ],
    "require": {
        "php": ">=5.5.0"
    },
    "require-dev": {
        "phpunit/phpunit": "~4.5",
    },
    "autoload": {
        "psr-4": {
            "Diging\\ChurchtoolsBundle\\": "src/"
        },
        "classmap": [
            "src/"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Diging\\ChurchtoolsBundle\\Test\\": "tests/"
        }
    },
    "config": {
        "preferred-install": "dist"
    },
    "extra": {
        "contao":{
            "sources":{
                "":"system/modules/churchtools"
            }
        }
    }
}
